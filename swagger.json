{
  "swagger": "2.0",
  "info": {
    "title": "Filament API",
    "description": "CSE 341 Project 2 - Brands & Filaments API",
    "version": "1.0.0"
  },

  "basePath": "/",

  "paths": {
    "/": {
      "get": {
        "description": "Health check",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },

    "/brands/": {
      "get": {
        "description": "Get all brands",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a brand",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Prusament" },
                "country": { "example": "Czech Republic" },
                "website": { "example": "https://prusament.com" },
                "notes": { "example": "Optional notes" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/brands/{id}": {
      "get": {
        "description": "Get brand by id",
        "produces": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update brand by id",
        "consumes": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": { "example": "Prusament" },
                "country": { "example": "CZ" },
                "website": { "example": "https://prusament.com" },
                "notes": { "example": "updated via PUT" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete brand by id",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/filaments/": {
      "get": {
        "description": "Get all filaments",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a filament",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "brand": { "example": "Prusament" },
                "material": { "example": "PLA" },
                "color": { "example": "Galaxy Black" },
                "nozzleTempMin": { "example": 215 },
                "nozzleTempMax": { "example": 230 },
                "bedTempMin": { "example": 55 },
                "bedTempMax": { "example": 65 }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },

    "/filaments/{id}": {
      "get": {
        "description": "Get filament by id",
        "produces": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update filament by id",
        "consumes": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "brand": { "example": "Prusament" },
                "material": { "example": "PETG" },
                "color": { "example": "Orange" },
                "nozzleTempMin": { "example": 240 },
                "nozzleTempMax": { "example": 260 },
                "bedTempMin": { "example": 70 },
                "bedTempMax": { "example": 90 }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete filament by id",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
